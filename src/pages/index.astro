---
import Layout from '../layouts/Layout.astro';

const heroSlides = [
    '/img/sidbar/coba.png',
    '/img/sidbar/sidbar1.jpg',
    '/img/sidbar/sidbar2.jpg',
    '/img/sidbar/sidbar3.jpg',
