---
const currentYear = new Date().getFullYear();

const socials = [
    {
        icon: 'facebook',
        color: '#1877F2',
        link: 'https://www.facebook.com/stekom.ac.id',
    },
    {
        icon: 'instagram',
        color: '#E4405F',
        link: 'https://www.instagram.com/universitasstekom',
    },
    {
        icon: 'youtube',
        color: '#FF0000',
        link: 'https://www.youtube.com/universitasstekom',
    },
];
---
 <!-- Footer -->
 <footer class="bg-[#0f172a] text-white pt-24 pb-12 relative overflow-hidden">
     <!-- Decorative Background Accents -->
     <div class="absolute top-0 left-0 w-full h-[2px] bg-linear-to-r from-transparent via-cyan-500/50 to-transparent">
     </div>
     <div class="absolute -top-32 -left-32 w-96 h-96 bg-cyan-600/10 rounded-full blur-[120px]"></div>
     <div class="absolute -bottom-32 -right-32 w-96 h-96 bg-red-600/10 rounded-full blur-[120px]"></div>

     <div class="container mx-auto px-4 relative z-10">
         <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 mb-16">

             <!-- Column 1: Branding & Philosophy -->
             <div class="lg:col-span-5 space-y-5">
                 <div class="inline-block transition-transform hover:scale-105 duration-500">
                     <img src="/img/sidbar/logo_stekom.png" alt="Logo STEKOM"
                         class="h-16 md:h-20 drop-shadow-2xl">
                 </div>
                 <div>
                     <h2 class="text-3xl md:text-4xl font-black tracking-tighter mb-6 text-white uppercase italic">
                         Universitas <span class="text-cyan-400 not-italic">STEKOM</span>
                     </h2>
                     <p
                         class="text-gray-400 text-xl leading-relaxed max-w-lg font-light italic border-l-4 border-cyan-500/30 pl-6">
                         "Kuliahnya Menyenangkan, Karirnya Terjamin. Membangun masa depan digital Indonesia dengan
                         teknologi terdepan dan semangat kewirausahaan."
                     </p>
                 </div>
             </div>

             <!-- Column 2: Essential Connections -->
             <div class="lg:col-span-4 lg:pl-10">
                 <h3 class="text-2xl font-bold mb-10 text-white flex items-center gap-4">
                     <span class="w-12 h-1.5 bg-cyan-500 rounded-full"></span>
                     Hubungi Kami
                 </h3>
                 <div class="space-y-10">
                     <div class="group flex items-start gap-6">
                         <div
                             class="shrink-0 w-14 h-14 rounded-3xl bg-white/5 border border-white/10 flex items-center justify-center text-cyan-400 group-hover:bg-cyan-500 group-hover:text-white group-hover:shadow-[0_0_30px_rgba(34,211,238,0.4)] group-hover:-translate-y-1 transition-all duration-500">
                             <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                     d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                     d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                             </svg>
                         </div>
                         <div>
                             <p class="text-xs font-black text-cyan-500 uppercase tracking-[0.2em] mb-2">Main Campus</p>
                             <p class="text-gray-300 text-base leading-relaxed font-medium">Jl. Majapahit No.605,
                                 Pedurungan, Semarang, Jawa Tengah 50192</p>
                         </div>
                     </div>

                     <div class="group flex items-start gap-6">
                         <div
                             class="shrink-0 w-14 h-14 rounded-3xl bg-white/5 border border-white/10 flex items-center justify-center text-cyan-400 group-hover:bg-cyan-500 group-hover:text-white group-hover:shadow-[0_0_30px_rgba(34,211,238,0.4)] group-hover:-translate-y-1 transition-all duration-500">
                             <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                                     d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                             </svg>
                         </div>
                         <div>
                             <p class="text-xs font-black text-cyan-500 uppercase tracking-[0.2em] mb-2">Digital
                                 Response</p>
                             <p
                                 class="text-gray-300 text-lg font-bold hover:text-cyan-400 transition-colors cursor-pointer">
                                 info@stekom.ac.id</p>
                         </div>
                     </div>
                 </div>
             </div>

             <!-- Column 3: Social Convergence -->
             <div class="lg:col-span-3">
                 <h3 class="text-2xl font-bold mb-10 text-white flex items-center gap-4">
                     <span class="w-12 h-1.5 bg-red-600 rounded-full"></span>
                     Media Sosial
                 </h3>
                 <div class="flex flex-wrap gap-5 mb-10">
                     {socials.map((social) => (
                        <a href={social.link} target="_blank"
                             class="w-16 h-16 bg-white/5 border border-white/10 rounded-2xl flex items-center justify-center text-gray-400 hover:text-white transition-all duration-500 group relative overflow-hidden shadow-2xl">
                             <div
                                 class="absolute inset-0 bg-linear-to-tr from-transparent to-white/5 opacity-0 group-hover:opacity-100 transition-opacity">
                             </div>
                             <div class="absolute inset-x-0 bottom-0 h-0 group-hover:h-full transition-all duration-500 z-0"
                                 style={`background-color: ${social.color};`}></div>
                             <svg class="w-7 h-7 relative z-10 group-hover:scale-125 transition-transform duration-500"
                                 fill="currentColor" viewBox="0 0 24 24">
                                 {social.icon === 'facebook' && (
                                     <path
                                         d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                                 )}
                                 {social.icon === 'instagram' && (
                                     <path
                                         d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                                 )}
                                 {social.icon === 'youtube' && (
                                     <path
                                         d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                                 )}
                             </svg>
                         </a>
                     ))}
                 </div>
                 <p class="text-gray-500 font-semibold uppercase tracking-tighter">
                     Connect & Evolve with us.
                 </p>
             </div>
         </div>

         <!-- Bottom Navigation & Legal -->
         <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-10">
             <div class="text-gray-500 text-sm font-bold tracking-tight">
                 &copy; {currentYear} <span class="text-white">UNIVERSITAS STEKOM</span>. Excellence in Digital
                 Education.
             </div>
             <div
                 class="flex flex-wrap justify-center gap-x-12 gap-y-4 text-xs font-black uppercase tracking-[0.2em] text-gray-500">
                 <a href="#" class="hover:text-cyan-400 transition-colors">Privacy</a>
                 <a href="#" class="hover:text-cyan-400 transition-colors">Terms</a>
                 <a href="#" class="hover:text-cyan-400 transition-colors">Policy</a>
             </div>
         </div>
     </div>
 </footer>

 <!-- Luxury Kinetic Back to Top -->
 <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
     class="fixed bottom-8 right-8 w-12 h-12 bg-linear-to-tr from-red-600 to-red-500 hover:from-cyan-500 hover:to-cyan-400 text-white rounded-xl shadow-lg flex items-center justify-center transition-all duration-700 opacity-0 invisible hover:scale-110 active:scale-95 z-60 group overflow-hidden border border-white/20"
     id="backToTop">
     <div
         class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-500">
     </div>
     <svg class="w-5 h-5 relative z-10 animate-bounce group-hover:animate-none" fill="none" stroke="currentColor"
         viewBox="0 0 24 24">
         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 10l7-7m0 0l7 7m-7-7v18" />
     </svg>
 </button>
